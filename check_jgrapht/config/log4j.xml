<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30">
	<Appenders>
		<Console name="Console">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		</Console>
	</Appenders>
	<Loggers>

		<Logger name="io.netty" level="WARN" />

		<Root level="DEBUG">
			<AppenderRef ref="Console"/>
		</Root>
	</Loggers>
</Configuration>
