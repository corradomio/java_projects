<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/javaparser.log"/>
		<param name="Append" value="false"/>
		<param name="MaxFileSize" value="32MB"/>
		<param name="MaxBackupIndex" value="16"/>

		<layout class="org.apache.log4j.PatternLayout">
			<!-- param name="ConversionPattern" value="%d %-5p [%c{1}] %m%n"/ -->
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} %-5p [%c] %m%n"/>
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss.SSS} %-5p: %c - %m%n" />
		</layout>
	</appender>

	<!-- Application Loggers -->
	<logger name="GradleProject">
		<level value="fatal" />
	</logger>
	<logger name="GradleModule">
		<level value="fatal" />
	</logger>

	<!-- Application Loggers -->
	<logger name="np.com.mshrestha">
		<level value="info" />
	</logger>

	<logger name="org.apache.http">
		<level value="info"/>
	</logger>

	<logger name="jext.javaparser.JavaParserPool">
		<level value="info"/>
	</logger>

	<logger name="jext.maven">
		<level value="info"/>
	</logger>

	<logger name="jext.javaparser.symbolsolver.resolution.typesolvers">
		<level value="info"/>
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="DEBUG" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
	
</log4j:configuration>
