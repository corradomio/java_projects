{
    "realm": "edp",
    "auth-server-url": "https://edp-portal.eurac.edu/auth/",
    "ssl-required": "external",
    "resource": "openEO",
    "verify-token-audience": false,

    "credentials": {
        "jwt": {
            "client-key-password": "test",
            "client-keystore-file": "src/main/resources/keycloak-ks.jks",
            "client-keystore-password": "test",
            "client-key-alias": "openEO",
            "token-timeout": 10,
            "client-keystore-type": "JKS"
        }
    },

    "use-resource-role-mappings": true,
    "confidential-port": 0,
    "policy-enforcer": {
        "enforcement-mode": "PERMISSIVE",

        "claim-information-point": {
            "claims": {

                "claim-from-relativePath": "{request.relativePath}"
            }
        }
    }
}
